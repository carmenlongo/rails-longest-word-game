<h1>Let's play</h1>

<p><%= @grid.join(" ") %></p>
<p><%= @start_time.strftime("start time : %H:%M:%S") %></p>
<form action="/score">
  <label for="game">Your word : </label>
  <input type="text" id="game" name="attempt" placeholder="Hello">
  <input type="submit" value="Submit">
  <input type="hidden" name="start_time" value="<%= @start_time %>">
  <input type="hidden" name="grid" value="<%= @grid %>">
</form>

